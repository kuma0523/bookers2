<div class="container px-5 sm-0">

  <div class="row">

    <div class="col-md-3">


      <%= render 'list', user: @user, book: @book %>

      </div>

      <div class="col-md-8">

         <h1>Books detail</h1>

        <table>


           <% @books.each do |book| %>

           <tbody>

            <tr>

              <td><%= image_tag @user.get_profile_image(100, 100) %></td>

              <td><%= link_to book.title, book_path(book.id) %></td>

              <td><%= book.body%></td>

            </tr>

          </tbody>

          <% end %>

        </table>

        <%= user.name  %>
        
          <!--link_to user_path(user.id)-->

      </div>

    </div>

  </div>