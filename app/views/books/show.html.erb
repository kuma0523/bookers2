<div class="container px-5 sm-0">

  <div class="row">

    <div class="col-md-3">


      <%= render 'list', user: @user, book: @new_book %>

      </div>

      <div class="col-md-8">

         <h1>Books detail</h1>

        <table>

           <tbody>

            <tr>

              <td><%= image_tag @user.get_profile_image(100,100) %></td>

              <td><%= link_to @book.title, book_path(@book.id) %></td>

              <td><%= @book.body%></td>

              <% if @user == current_user %>

                <td><%= link_to 'edit', edit_book_path(@user.id) %></td>

              <% end %>

              <% if @book.user == current_user %>

                <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>

              <% end %>

            </tr>

          </tbody>

        </table>

        <%= link_to @user.name, user_path(@user.id) %>


      </div>

    </div>

  </div>