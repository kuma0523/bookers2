<div class="container px-5 sm-0">

  <div class="row">

    <div class="col-md-3">


      <%= render 'list', user: @user, book: @new_book %>

      </div>

      <div class="col-md-8">

         <h1>Books detail</h1>

        <table>

           <tbody>

            <tr>

              <td><%= image_tag @user.get_profile_image(100, 100) %></td>

              <td><%= link_to @book.title, book_path(@book.id) %></td>

              <td><%= @book.body%></td>

              <td><%= link_to 'edit', edit_book_path(current_user.id) %></td>

            </tr>

          </tbody>

        </table>

        <%= link_to @user.name, user_path(@user.id) %>

          <!--link_to user_path(user.id)-->

      </div>

    </div>

  </div>