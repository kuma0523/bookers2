<h1>User info</h1>

<%= form_with model: @book, url: edit_book_path(current_user.id), method: :patch do |f| %>

  <h4>Title</h4>

  <%= f.text_field :title %>

  <h4>Opinion</h4>

  <%= f.text_area :opinion %>

  <%= f.submit 'Update Book' %>
  
  <%= link_to "Show", book_path(@book.id) %>

|

  <%= link_to "Back", books_path %>

 <% end %>