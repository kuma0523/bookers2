<h1>User info</h1>

<%= form_with model: @user, url: user_path(current_user.id), method: :patch do |f| %>

  <h4>Name</h4>

  <%= f.text_field :name %>

  <h4>Image</h4>

  <%= f.file_field :image  %>

  <!--,"image/*"-->

  <h4>Intoroduction</h4>

  <%= f.text_area :introduction %>

  <%= f.submit 'Update User' %>

 <% end %>